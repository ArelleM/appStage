{# /app/templates/registration/register.html.twig #}
{% block stylesheet %}
	<!--===============================================================================================-->
	<link rel="icon" type="image/png" href="images/icons/favicon.ico"/>
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="fonts/iconic/css/material-design-iconic-font.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="vendor/animate/animate.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="vendor/css-hamburgers/hamburgers.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="vendor/animsition/css/animsition.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="vendor/select2/select2.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="vendor/daterangepicker/daterangepicker.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="css/register/util.css">
	<link rel="stylesheet" type="text/css" href="css/register/main.css">
	<!--===============================================================================================-->
{% endblock %}

{% block body %}
	<div class="limiter">
		<div class="container-login100">
			<div class="login100-more" style="background-image: url('images/bg-01.jpg');"></div>
			
			<div class="wrap-login100 p-l-50 p-r-50 p-t-72 p-b-50 flex">
				{{ form_start(registrationForm, {'attr': {'class': 'login100-form validate-form'}}) }}
					<span class="login100-form-title p-b-59">
						S'inscrire
					</span>
				<div class="wrap-input100 validate-input" >
					<span class="label-input100">Identifiant</span>
					{{ form_widget(registrationForm.username, {'attr': {'class': 'input100','placeholder':'Votre identifiant..'}}) }}
					<span class="focus-input100"></span>
				</div>
				
				<div class="wrap-input100 validate-input">
					<span class="label-input100">Mot de passe</span>
					{{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'input100','placeholder':'*********'}}) }}
					<span class="focus-input100"></span>
				</div>
				<div class="wrap-input100 validate-input" >
					<span class="label-input100">Répétez le mot de passe</span>
					{{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'input100','placeholder':'*********'}}) }}
					<span class="focus-input100"></span>
				</div>
				<div class="wrap-input100 validate-input" >
					<span class="label-input100">Vous êtes...</span>
					{%  for  choiceField in registrationForm.roles %}
						<li>
							{{ form_widget(choiceField, {'attr': {'class': 'input100'}}) }}
						</li>
					{% endfor %}
				</div>
				<div class="p-b-50">
					{{ form_row(registrationForm.agreeTerms) }}
				</div>
				<div class="container-login100-form-btn">
					<div class="wrap-login100-form-btn">
						<div class="login100-form-bgbtn"></div>
						<button class="login100-form-btn" type="submit">
							S'inscrire
						</button>
					</div>
					{{ form_end(registrationForm) }}
					<a href="{{ path('login') }}" class="dis-block txt3 hov1 p-r-30 p-t-10 p-b-10 p-l-30">
						Se connecter
						<i class="fa fa-long-arrow-right m-l-5"></i>
					</a>
				</div>
				
				
			</div>
		</div>
	</div>

{% endblock %}